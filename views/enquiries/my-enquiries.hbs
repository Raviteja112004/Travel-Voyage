<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h2>My Package Enquiries</h2>
      
      {{#if enquiries.length}}
        <div class="row mt-4">
          {{#each enquiries}}
            <div class="col-md-6 mb-4">
              <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                  <h5 class="mb-0">{{this.PackageName}}</h5>
                  <span class="badge {{#if this.Response}}bg-success{{else}}bg-warning text-dark{{/if}}">
                    {{#if this.Response}}Answered{{else}}Pending{{/if}}
                  </span>
                </div>
                <div class="card-body">
                  <h6 class="card-subtitle mb-2 text-muted">{{this.Subject}}</h6>
                  <p class="card-text">{{this.Description}}</p>
                  
                  {{#if this.Response}}
                    <div class="alert alert-success mt-3">
                      <h6 class="alert-heading">Response:</h6>
                      <p class="mb-0">{{this.Response}}</p>
                      <small class="text-muted">
                        Answered on: {{formatDate this.ResponseDate}}
                      </small>
                    </div>
                  {{/if}}
                  
                  <div class="text-muted mt-3">
                    <small>Asked on: {{formatDate this.EnquiryDate}}</small>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="alert alert-info mt-4">
          <p class="mb-0">You haven't made any enquiries yet. Browse our packages to ask questions!</p>
          <a href="/packages" class="btn btn-primary mt-3">View Packages</a>
        </div>
      {{/if}}
    </div>
  </div>
</div> 