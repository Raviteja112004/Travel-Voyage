{{#if isLoggedIn}}
<div class="user-dropdown">
    <div class="user-icon">
        <i class="fas fa-user"></i>
    </div>
    <div class="dropdown-menu">
        <div class="user-info">
            <div class="welcome-message">Welcome, {{userName}}!</div>
            <div class="user-email">{{userEmail}}</div>
        </div>
        <a href="/profile"><i class="fas fa-user-circle"></i> My Profile</a>
        {{!-- <a href="/bookings"><i class="fas fa-ticket-alt"></i> My Bookings</a>
        <div class="dropdown-divider"></div> --}}
        <a href="/change-password"><i class="fas fa-key"></i> Change Password</a>
        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
</div>
{{else}}
<div class="auth-buttons">
    <a href="/login" class="auth-btn login-btn"><i class="fas fa-sign-in-alt"></i> Login</a>
    <a href="/signup" class="auth-btn signup-btn"><i class="fas fa-user-plus"></i> Sign Up</a>
    <a href="/admin/login" class="auth-btn admin-login-btn"><i class="fas fa-user-shield"></i> Admin</a>
</div>
{{/if}} 