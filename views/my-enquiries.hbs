<div class="container mt-4">
  <h2>My Enquiries</h2>

  {{#if enquiries.length}}
    <div class="row">
      {{#each enquiries}}
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0">{{this.Subject}}</h5>
              <span class="badge {{#if this.Response}}bg-success{{else}}bg-warning{{/if}}">
                {{#if this.Response}}Answered{{else}}Pending{{/if}}
              </span>
            </div>
            <div class="card-body">
              <h6 class="card-subtitle mb-2 text-muted">
                Package: {{this.PackageName}} ({{this.PackageLocation}})
              </h6>
              <p class="card-text">{{this.Description}}</p>
              
              {{#if this.Response}}
                <div class="alert alert-success mt-3">
                  <h6 class="alert-heading">Response:</h6>
                  <p class="mb-0">{{this.Response}}</p>
                  <small class="text-muted">
                    Responded on: {{formatDate this.ResponseDate}}
                  </small>
                </div>
              {{/if}}
              
              <div class="text-muted mt-2">
                <small>Enquiry Date: {{formatDate this.EnquiryDate}}</small>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info">
      <p class="mb-0">You haven't made any enquiries yet.</p>
    </div>
  {{/if}}
</div> 