<div class="bg-gray-50 min-h-screen">
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-r from-blue-600 to-indigo-700 text-white">
    <div class="container mx-auto px-4 py-12">
      <h1 class="text-3xl md:text-4xl font-bold mb-2">Discover Your Perfect Adventure</h1>
      <p class="text-xl text-blue-100 max-w-2xl">Explore our handpicked tour packages designed to create unforgettable experiences.</p>
    </div>
    <div class="absolute bottom-0 left-0 w-full overflow-hidden">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none" class="h-16 w-full">
        <path d="M985.66,92.83C906.67,72,823.78,31,743.84,14.19c-82.26-17.34-168.06-16.33-250.45.39-57.84,11.73-114,31.07-172,41.86A600.21,600.21,0,0,1,0,27.35V120H1200V95.8C1132.19,118.92,1055.71,111.31,985.66,92.83Z" fill="#f9fafb"></path>
      </svg>
    </div>
            </div>
            
  <div class="container mx-auto px-4 pb-16 -mt-8 relative z-10">
    <!-- Search and Filter Bar -->
    <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
      <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4">
        <div class="flex-1 relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-search text-gray-400"></i>
                        </div>
          <input type="text" id="search-filter" placeholder="Where do you want to go?" class="w-full pl-10 pr-3 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:ring-0 transition-colors">
                    </div>
        <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4">
          <div class="md:w-48">
            <select id="price-filter" class="w-full py-3 px-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:ring-0 transition-colors">
              <option value="">Price Range</option>
              <option value="0-10000">Under ₹10,000</option>
              <option value="10000-30000">₹10,000 - ₹30,000</option>
              <option value="30000-50000">₹30,000 - ₹50,000</option>
              <option value="50000-100000">₹50,000 - ₹100,000</option>
              <option value="100000-999999">₹100,000+</option>
            </select>
                </div>
          <div class="md:w-48">
            <select id="duration-filter" class="w-full py-3 px-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:ring-0 transition-colors">
              <option value="">Duration</option>
              <option value="1-3">1-3 Days</option>
              <option value="4-7">4-7 Days</option>
              <option value="8-14">8-14 Days</option>
              <option value="15-999">15+ Days</option>
            </select>
                    </div>
          <button id="filter-button" class="bg-blue-600 hover:bg-blue-700 text-white py-3 px-6 rounded-lg transition-colors font-medium">
            <i class="fas fa-filter mr-2"></i>Filter
          </button>
                        </div>
                    </div>
                </div>
                
    <!-- Filter Tags -->
    <div class="flex flex-wrap gap-2 mb-6" id="active-filters">
      <span class="bg-blue-50 text-blue-700 rounded-full px-4 py-2 text-sm font-medium flex items-center">
        <span id="results-count">{{packages.length}} packages</span>
                        </span>
      <!-- Active filters will appear here -->
            </div>
            
    <!-- Packages Grid -->
    <div id="packages-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {{#each packages}}
      <div class="package-card" data-aos="fade-up" data-aos-duration="800" data-aos-delay="{{multiply @index 100}}" 
                     data-name="{{this.PackageName}}" 
                     data-location="{{this.PackageLocation}}" 
                     data-price="{{this.PackagePrice}}" 
                     data-duration="{{this.Duration}}" 
           data-categories="{{this.Categories}}">
        <div class="bg-white rounded-xl shadow-md overflow-hidden h-full flex flex-col transition-all duration-300 hover:shadow-xl hover:transform hover:-translate-y-2">
                        <div class="relative">
            <img src="{{this.PackageImage}}" alt="{{this.PackageName}}" class="w-full h-56 object-cover">
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-4">
              <div class="flex justify-between items-end">
                <h2 class="text-xl font-bold text-white">{{this.PackageName}}</h2>
                <div class="bg-white text-blue-600 px-3 py-1 rounded-lg text-sm font-bold">
                  ₹{{this.PackagePrice}}
                </div>
              </div>
            </div>
            <div class="absolute top-0 right-0 m-4">
              <div class="bg-white/90 backdrop-blur-sm text-blue-600 px-3 py-1 rounded-lg text-sm font-semibold flex items-center">
                <i class="fas fa-calendar-day mr-1"></i> {{this.Duration}} days
                            </div>
                            </div>
                        </div>
                        <div class="p-5 flex-grow flex flex-col">
            <div class="flex items-center text-gray-600 mb-3">
                                <i class="fas fa-map-marker-alt text-red-500 mr-2"></i>
                                {{this.PackageLocation}}
            </div>
            <p class="text-gray-600 text-sm mb-4 flex-grow">{{truncate this.PackageDetails 120}}</p>

            <div class="flex flex-wrap gap-2 mb-4">
                                {{#each (split this.Categories ",")}}
              <span class="bg-blue-50 text-blue-600 text-xs px-3 py-1 rounded-full">{{this}}</span>
                                {{/each}}
                            </div>

            <div class="flex justify-between items-center">
              <div class="flex">
                <span class="text-yellow-400">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star-half-alt"></i>
                </span>
                <span class="ml-1 text-xs text-gray-500">(48 reviews)</span>
                                </div>
              <a href="/package-details/{{this.PackageId}}" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg transition-colors font-medium flex items-center">
                View <i class="fas fa-arrow-right ml-2"></i>
              </a>
                            </div>
                        </div>
                </div>
            </div>
        {{else}}
      <div class="col-span-full py-16 flex flex-col items-center justify-center bg-white rounded-lg shadow-md">
        <div class="w-24 h-24 bg-blue-50 rounded-full flex items-center justify-center mb-4">
          <i class="fas fa-search text-blue-500 text-3xl"></i>
        </div>
        <h3 class="text-xl font-semibold text-gray-800 mb-2">No packages found</h3>
        <p class="text-gray-600 max-w-md text-center mb-6">We couldn't find any packages matching your criteria. Try adjusting your filters or explore our popular destinations.</p>
        <button id="reset-all-filters" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg transition-colors font-medium">
          <i class="fas fa-undo mr-2"></i>Reset All Filters
        </button>
                </div>
        {{/each}}
            </div>
            
    <!-- Pagination -->
    {{#if packages.length}}
    <div class="mt-12 flex justify-center">
      <nav class="inline-flex rounded-md shadow-sm -space-x-px">
        <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-blue-50">
          <i class="fas fa-chevron-left"></i>
        </a>
        <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-blue-600 text-sm font-medium text-white hover:bg-blue-700">
          1
        </a>
        <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-blue-50">
          2
        </a>
        <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-blue-50">
          3
        </a>
        <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-blue-50">
          <i class="fas fa-chevron-right"></i>
        </a>
      </nav>
    </div>
    {{/if}}

    <!-- Inspiration Section -->
    {{#if packages.length}}
    <div class="mt-16">
      <h2 class="text-2xl font-bold text-gray-800 mb-8">Popular Destinations</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="relative rounded-lg overflow-hidden h-36 md:h-44 group">
          <img src="https://images.unsplash.com/photo-1524492412937-b28074a5d7da" alt="Kerala" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-black/0 flex items-end">
            <div class="p-4">
              <h3 class="text-white font-semibold">Kerala</h3>
              <p class="text-white/70 text-xs">God's Own Country</p>
            </div>
          </div>
        </div>
        <div class="relative rounded-lg overflow-hidden h-36 md:h-44 group">
          <img src="https://images.unsplash.com/photo-1587135941948-670b381f08ce" alt="Rajasthan" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-black/0 flex items-end">
            <div class="p-4">
              <h3 class="text-white font-semibold">Rajasthan</h3>
              <p class="text-white/70 text-xs">Land of Kings</p>
            </div>
          </div>
        </div>
        <div class="relative rounded-lg overflow-hidden h-36 md:h-44 group">
          <img src="https://images.unsplash.com/photo-1526391922840-891b87f9af1b" alt="Himalayas" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-black/0 flex items-end">
            <div class="p-4">
              <h3 class="text-white font-semibold">Himalayas</h3>
              <p class="text-white/70 text-xs">Majestic Mountains</p>
            </div>
          </div>
        </div>
        <div class="relative rounded-lg overflow-hidden h-36 md:h-44 group">
          <img src="https://images.unsplash.com/photo-1564507791227-bd8abd6f87e7" alt="Goa" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-black/0 flex items-end">
            <div class="p-4">
              <h3 class="text-white font-semibold">Goa</h3>
              <p class="text-white/70 text-xs">Beach Paradise</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/if}}
  </div>

  <!-- Subscribe Section -->
  <div class="bg-blue-600 py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">Subscribe to Our Newsletter</h2>
        <p class="text-blue-100 mb-6">Get special offers, travel inspiration and exclusive deals delivered straight to your inbox.</p>
        <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
          <input type="email" placeholder="Your email address" class="px-4 py-3 rounded-lg flex-1 max-w-md focus:outline-none focus:ring-2 focus:ring-white">
          <button class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors">
            Subscribe
          </button>
        </div>
      </div>
        </div>
    </div>
</div> 

<script>
    document.addEventListener('DOMContentLoaded', function() {
    // Filter functionality
    const searchInput = document.getElementById('search-filter');
    const priceFilter = document.getElementById('price-filter');
    const durationFilter = document.getElementById('duration-filter');
    const filterButton = document.getElementById('filter-button');
    const activeFilters = document.getElementById('active-filters');
    const resultsCount = document.getElementById('results-count');
    const packages = document.querySelectorAll('.package-card');
    const resetAllFilters = document.getElementById('reset-all-filters');
    
    // Apply filters
    filterButton.addEventListener('click', function() {
      applyFilters();
      updateActiveFilters();
    });
    
    // Reset filters
    if (resetAllFilters) {
      resetAllFilters.addEventListener('click', function() {
        searchInput.value = '';
        priceFilter.selectedIndex = 0;
        durationFilter.selectedIndex = 0;
        applyFilters();
        updateActiveFilters();
      });
    }
    
    function applyFilters() {
      const searchTerm = searchInput.value.toLowerCase();
      const priceRange = priceFilter.value ? priceFilter.value.split('-').map(Number) : null;
      const durationRange = durationFilter.value ? durationFilter.value.split('-').map(Number) : null;
      
      let visibleCount = 0;
      
      packages.forEach(pkg => {
        const name = pkg.dataset.name.toLowerCase();
        const location = pkg.dataset.location.toLowerCase();
        const price = parseFloat(pkg.dataset.price);
        const duration = parseInt(pkg.dataset.duration);
        const categories = pkg.dataset.categories.toLowerCase();
        
        let visible = true;
        
        // Search filter
        if (searchTerm && !name.includes(searchTerm) && !location.includes(searchTerm) && !categories.includes(searchTerm)) {
          visible = false;
        }
        
        // Price filter
        if (priceRange && (price < priceRange[0] || price > priceRange[1])) {
          visible = false;
        }
        
        // Duration filter
        if (durationRange && (duration < durationRange[0] || duration > durationRange[1])) {
          visible = false;
        }
        
        pkg.style.display = visible ? 'block' : 'none';
        
        if (visible) visibleCount++;
      });
      
      resultsCount.textContent = `${visibleCount} packages`;
    }
    
    function updateActiveFilters() {
      // Clear existing filters
      while (activeFilters.children.length > 1) {
        activeFilters.removeChild(activeFilters.lastChild);
      }
      
      // Add search filter tag
      if (searchInput.value) {
        addFilterTag(`Search: ${searchInput.value}`, function() {
          searchInput.value = '';
          applyFilters();
          updateActiveFilters();
        });
      }
      
      // Add price filter tag
      if (priceFilter.selectedIndex > 0) {
        addFilterTag(`Price: ${priceFilter.options[priceFilter.selectedIndex].text}`, function() {
          priceFilter.selectedIndex = 0;
          applyFilters();
          updateActiveFilters();
        });
      }
      
      // Add duration filter tag
      if (durationFilter.selectedIndex > 0) {
        addFilterTag(`Duration: ${durationFilter.options[durationFilter.selectedIndex].text}`, function() {
          durationFilter.selectedIndex = 0;
          applyFilters();
          updateActiveFilters();
        });
      }
    }
    
    function addFilterTag(text, removeCallback) {
      const tag = document.createElement('span');
      tag.className = 'bg-blue-50 text-blue-700 rounded-full px-4 py-2 text-sm font-medium flex items-center';
      tag.innerHTML = `${text} <button class="ml-2 text-blue-500 hover:text-blue-700"><i class="fas fa-times"></i></button>`;
      
      tag.querySelector('button').addEventListener('click', removeCallback);
      
      activeFilters.appendChild(tag);
    }
    
    // Initialize AOS library
    if (typeof AOS !== 'undefined') {
      AOS.init({
        duration: 800,
        easing: 'ease-out-cubic',
        once: true
            });
        }
    });
</script> 