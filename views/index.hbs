            color: var(--text-color);
        }
        
        .hero-section {
            background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/photo-1530789253388-582c481c54b0?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80');
            background-size: cover;
            background-position: center;
            height: 90vh;
            min-height: 500px;
        }
        
        .section-title {
            text-transform: uppercase;
            font-weight: 700;
            font-size: 2.5rem;
            position: relative;
            color: #27374D;
            text-align: center;
        }
        
        .section-subtitle {
            color: #3b82f6;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-size: 0.875rem;
            text-align: center;
            margin-bottom: 0.75rem;
        }
        
        .placeholder-text {
            color: #666;
            font-size: 1rem;
            text-align: center;
            max-width: 800px;
            margin: 0 auto 3rem;
        }
        
        .image-gallery {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            grid-auto-rows: 250px;
            grid-gap: 1.5rem;
            margin-top: 2rem;
        }
        
        .gallery-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 0.75rem;
            transition: transform 0.3s ease;
        }
        
        .gallery-item {
            position: relative;
            overflow: hidden;
            border-radius: 0.75rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .gallery-item:hover .gallery-img {
            transform: scale(1.05);
        }
        
        .package-card {
            background-color: white;
            border-radius: 0.75rem;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            margin-bottom: 2rem;
        }
        
        .package-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .package-img {
            width: 40%;
            object-fit: cover;
        }
        
        .package-content {
            padding: 1.5rem;
            width: 60%;
        }
        
        .package-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: #27374D;
        }
        
        .package-desc {
            color: #666;
            margin-bottom: 1rem;
        }
        
        .price-box {
            background-color: #3b82f6;
            color: white;
            padding: 1.5rem;
            border-radius: 0.5rem;
            display: inline-block;
            margin-top: 1rem;
        }
        
        .price {
            font-size: 2.5rem;
            font-weight: 700;
            display: block;
            text-align: center;
        }
        
        .per-person {
            font-size: 0.875rem;
            display: block;
            text-align: center;
        }
        
        .package-meta {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }
        
        .meta-item {
            display: flex;
            align-items: center;
            color: #666;
            font-size: 0.875rem;
        }
        
