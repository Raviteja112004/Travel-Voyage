        .destination-card:hover {
            transform: translateY(-5px);
        }
        
        .destination-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .destination-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: white;
            padding: 1.5rem;
            border-radius: 0 0 0.75rem 0.75rem;
        }
        
        .destination-location {
